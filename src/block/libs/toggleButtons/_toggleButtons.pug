mixin toggleButtons(text) 
  .toggleButtons__wrap
    .toggleButtons_container.toggleButtons_containerIncluded__padding.toggleButtons_container__colorPrimary
      .toggleButtons_toggle.toggleButtons_toggle__colorPrimary
    .toggleButtons_text=text
  .toggleButtons__wrap.toggleButtons__displayNone
    .toggleButtons_container.toggleButtons_containerDisabled__padding.toggleButtons_container__colorDark
      .toggleButtons_toggle.toggleButtons_toggle__colorDark
    .toggleButtons_text=text  