        +buttons('btnSignUp', 'buttons__width196', 'buttons__height34', 'buttons__defaultBg','displayNone', 'зарегистрироваться', 'button_text__width') 
      div(class=ml20) 
      .heder_user(class=displayNoneUserName) 
